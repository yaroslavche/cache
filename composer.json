{
    "name": "beryllium/cache",
    "description": "Provides a PHP interface to numerous caching implementations",
    "keywords": ["memcache", "cache", "memcached", "apc"],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Kevin Boyd (aka Beryllium)",
            "homepage": "http://whateverthing.com/"
        },
        {
            "name": "Jeremy Livingston",
            "homepage": "http://github.com/jeremylivingston"
        },
        {
            "name": "Nechaev Yaroslav",
            "homepage": "http://github.com/Remper"
        }
    ],
    "require":
    {
        "php": ">=7.2.0",
        "psr/simple-cache": "^1.0"
    },
    "require-dev":
    {
        "mikey179/vfsstream": "1.2.*",
        "phpunit/phpunit": "^8.3",
        "ext-memcached": "*",
        "ext-apcu": "*",
        "phpstan/phpstan": "^0.11.15",
        "squizlabs/php_codesniffer": "^3.4",
        "thecodingmachine/phpstan-strict-rules": "^0.11.2",
        "roave/backward-compatibility-check": "^3.0",
        "infection/infection": "^0.13.6"
    },
    "autoload":
    {
        "psr-4": { "Beryllium\\Cache\\": "src/" }
    },
    "autoload-dev":
    {
        "psr-4": { "Beryllium\\Cache\\Tests\\": "tests/" }
    },
    "scripts": {
        "cscheck": "phpcs",
        "csfix": "phpcbf",
        "phpstan": "phpstan analyse src/ -c phpstan.neon --level=7 --no-progress -vvv --memory-limit=1024M",
        "phpunit": "phpunit",
        "infection": "infection --min-msi=50 --min-covered-msi=70 --log-verbosity=all",
        "clover": "phpunit --coverage-clover clover.xml"
    }
}
